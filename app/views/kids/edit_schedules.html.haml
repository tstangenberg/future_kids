= render :partial => 'schedules/table'

= boot_form_for resource, :method => :get, :url => { :action => 'edit_schedules' }, :html => { :class => 'schedule' } do |form|
  %h3 Mentor Daten einblenden
  .row(style='margin-bottom: 10px;')
    .col-xs-2
      Mentoren ohne Sch&uuml;ler
    .col-xs-2
      Mentoren mit prim&auml;rem Sch&uuml;ler zugewiesen
    .col-xs-2
      Mentoren mit sekund&auml;rem Sch&uuml;ler zugewiesen
    .col-xs-2
      Mentoren mit beiden Sch&uuml;lern zugewiesen
    .col-xs-2
      Ersatzmentoren
  .row(style='margin-bottom: 10px;')
    .col-xs-2
      = select_tag "mentor_ids",
        options_from_collection_for_select(@mentor_groups[:none], 'id', 'display_name', @mentor_ids),
        :multiple => true
    .col-xs-2
      = select_tag "mentor_ids",
        options_from_collection_for_select(@mentor_groups[:only_primary], 'id', 'display_name', @mentor_ids),
        :multiple => true
    .col-xs-2
      = select_tag "mentor_ids",
        options_from_collection_for_select(@mentor_groups[:only_secondary], 'id', 'display_name', @mentor_ids),
        :multiple => true
    .col-xs-2
      = select_tag "mentor_ids",
        options_from_collection_for_select(@mentor_groups[:both], 'id', 'display_name', @mentor_ids),
        :multiple => true
    .col-xs-2
      = select_tag "mentor_ids",
        options_from_collection_for_select(@mentor_groups[:substitute], 'id', 'display_name', @mentor_ids),
        :multiple => true
    .col-xs-2
      = form.submit 'Ausw√§hlen', class: 'btn btn-default'
